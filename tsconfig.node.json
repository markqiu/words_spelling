{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "dist-electron",
    "rootDir": "src",
    "esModuleInterop": true,
    "target": "ES2020"
  },
  "include": ["src/main/**/*", "src/preload/**/*", "src/types/**/*"]
}
